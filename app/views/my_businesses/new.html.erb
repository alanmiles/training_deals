<% provide(:title, 'Add business') %>
<h1>Add a business</h1>

<div class="row">
	<aside class="span3">
		<section>
			<%= render "/shared/business_menu_new" %>
		</section>
		<section>		
			<%= render 'introduction' %>
		</section>	
		<section>
			<%= render 'guidance' %>
		</section>
	</aside>
	<div class="span8">
		<%= form_for(@business, url: my_businesses_path, html: { multipart: true }) do |f| %>
			<%= render 'fields', f: f %>
			<%= f.submit "Create", class: "btn btn-primary" %>
			<div class="navigator">
				<%= link_to "<- Cancel", my_businesses_path %> 
			</div>
		<% end %>
	</div>
</div> 
