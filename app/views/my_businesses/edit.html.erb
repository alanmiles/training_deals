<% provide(:title, "Update #{current_business.name}, #{current_business.city}") %>
<h1>Update business</h1>

<div class="row">
	<aside class="span3">
		<section>
			<%= render "/shared/business_menu" %>
		</section>
		<section>
			<%= render "guidance" %>
		</section>
	</aside>
	<div class="span8">
		<%= form_for @business, url: { controller: 'my_businesses', 
				action: 'update', html: { multipart: true } } do |f| %>

		 	<%= render 'fields', f: f %>

			<%= f.submit "Confirm", class: "btn btn-primary" %>
			<div class="navigator">
				<%= link_to "<- Cancel", my_business_path(@business) %>
			</div>
		<% end %>
	</div>
</div> 

