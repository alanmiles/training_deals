<%= link_to image_tag("hroomph_logo.png", 
					alt: "hroomph"), root_path, id: "logo" %>
<nav>
	<ul class="nav pull-right">
		<li id="home-2"><%= link_to "Home page", root_path	%></li>
		<% if signed_in? %>
			<li><%= link_to "Profile", current_user %></li>
			<li><%= link_to "Settings", edit_user_path(current_user) %></li>
			<li>
				<%= form_for('/sessions/destroy', as: 'signout',
					url: '/sessions/destroy', html: { method: :delete, class: 'sign-out' }) do |f| %>
					<%= f.submit "Sign out" %>
				<% end %>

			</li>
			<li class="padtop10"><%= gravatar_for current_user, size: 25 %></li>
		<% else %>
			<li><%= link_to "Sign in", signin_path %></li>
		<% end %>
	</ul>
</nav>