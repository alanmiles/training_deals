<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>


<div class="row">
	<aside class="span3">
		<section>
			<%= render "/shared/user_menu" %>
		</section>
		<section>
			<%= render 'protection' %>
		</section>
	</aside>
	<div class="span8">
		<%= form_for(@user) do |f| %>
			<%= render 'fields', f: f %>
			<%= f.submit "Save changes", class: "btn btn-primary" %>
		<% end %>

		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails", target = "_blank">change</a>
	</div>
</div>