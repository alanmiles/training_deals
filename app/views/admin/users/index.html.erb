<% provide(:title, 'All users') %>
<h1>All users</h1>

<div class="row">
	<aside class="span3">
		<section>
			<%= render "/shared/admin_menu_side" %>
		</section>
	</aside>

	<div class="span8">
		<%= form_tag admin_users_path, method: 'get',
				id: "users_search" do %>
			<p>
				<%= text_field_tag :search, params[:search], 
					class: "half-width", 
						placeholder: 'Filter by user name, town, country or email' %>
				<span class="js-content glyphicon glyphicon-search"></span>
				<span class="html-content"><%= submit_tag "Search", title: nil %></span>
			</p>

			<div id="users"><%= render 'users' %></div>
			<div class="navigator">
			    <%= link_to "<- Return to main admin menu", root_path %> 
			</div>
		<% end %>
	</div>
</div>