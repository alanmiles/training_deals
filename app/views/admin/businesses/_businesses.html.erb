<span class='table-total'>Total vendors: <%= @total %></span>
<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table table-striped table-bordered table-condensed">

	<tr>
		<th><%= sortable "name"  %></th>
		<th><%= sortable "city", "Town" %></th>
		<th><%= sortable "country" %></th>
		<th></th>
	</tr>
	<% @businesses.each do |business| %>
		<%= content_tag_for :tr, business do %>
	 
			<td><%= link_to business.name, admin_business_path(business) %></td>
			<td><%= business.city %></td>
			<td><%= business.country %></td>
			<td>
				<%= link_to "delete", 
					{ controller: 'admin/businesses',
						action: 'destroy', 
						id: business.id }, 
						{ method: :delete,
						data: { confirm: "Are you sure?" } } %>
			</td>
		<% end %>
	<% end %>
</table>
<%= will_paginate @businesses %>