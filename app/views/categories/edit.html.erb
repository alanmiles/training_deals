<% provide(:title, "#{@genre.description}: edit category") %>
<span class="two-line-header"><h1>Edit category</h1></span>
<h2><%= "for the '#{@genre.description}' genre" %></h2>

<div class="row">
	<aside class="span3">
		<section>
			<%= render "/shared/admin_menu_side" %>
		</section>
	</aside>
	<div class="span8">
		<%= form_for (@category) do |f| %>

		 	<%= render 'fields', f: f %>

			<%= f.submit "Confirm", class: "btn btn-primary" %>
			<div class="navigator">
				<%= link_to "<- Cancel", genre_categories_path(@genre) %>
			</div>
		<% end %>
	</div>
</div> 

