<% provide(:title, "Add product/service") %>
<span class="two-line-header"><h1>Add a product or service</h1></span>
<h2><%= "for #{current_business.name}, #{current_business.city}" %></h2>

<div class="row">
	<aside class="span3">
		<section>
			<%= render "/shared/business_menu" %>
		</section>
	</aside>
	<div class="span8">
		<%= form_for([@business, @product], 
				url: my_business_products_path(@business)) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="entry-page">
				<%= render 'fields_ht', f: f %>
				<%= render 'fields', f: f %>
			</div>	
			<%= f.submit "Create", class: "btn btn-primary" %>
		<% end %>
	</div>
</div> 
<div class="navigator">
	<% if @business.has_products? %>
		<%= link_to "<- All products/services", my_business_products_path(@business) %>
	<% else %>
		<%= link_to "<- Products/services intro", my_business_products_path(@business) %>
	<% end %>
</div>