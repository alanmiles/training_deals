<div><%= @business.street_address %></div>
<div><%= @business.email %></div>
<% unless @business.all_phones_vendor == "Not shown" %>
	<div><%= @business.all_phones_vendor %></div>
<% end %>
<% if @business.website? %>
	<div>Website: <%= link_to(@business.website, "#{@business.website}", target: "_blank") %></div>
<% end %>
<div>Added by <%= @founder.name %> <em>&lt;<%= @founder.email %>&gt;</em> 
	on <%= formatted_shortdate(@business.created_at) %>
</div>