<% unless @business.old_training_methods.length == 0 %>
	<table class="table table-striped table-bordered table-condensed">
		<tr>
			<th></th>
			<th class="numeric">No of products</th>
			<th class="numeric">Items / events</th>
		</tr>
		<% @business.old_training_methods.each do |oldmethod| %>
			<tr>
				<td><%= oldmethod.description %></td>
				<td class="numeric"><%= @business.count_products(false, oldmethod.id) %></td>
				<td class="numeric"> 
					<% if oldmethod.event? %>
						<%= @business.count_previous_events_for_products(false, 
								oldmethod.id) %>
					<% else %>
						<%= @business.count_products(false, oldmethod.id) %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</table>
<% else %>
	<div class="no-content">-- None --</div>
<% end %>