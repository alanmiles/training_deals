<% provide(:title, "Edit event") %>
<span class="two-line-header"><h1>Edit event</h1></span>
<h2><%= "for '#{@product.title}'" %></h2>

<div class="row">
	<aside class="span3">
		<section>
			<%= render "/shared/business_menu" %> 
		</section>
	</aside>
	<div class="span8">
		<%= form_for @event do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<% if @event.end_date < Date.today %>
				<div class = "check-info add-bottom-space">
					Now finished. Only change details if absolutely essential.
				</div>
			<% end %>
			<%= render 'fields', f: f %>
			<div class="entry">
				<%= f.hidden_field :created_by %>
			</div>
			<%= f.submit "Update", class: "btn btn-primary" %>
			<div class="navigator">
				<% if session[:product_page] %>
        			<%= link_to "<- Drop changes", product_path(@product) %>
        		<% else %>
				  	<%= link_to "<- Drop changes", event_path(@event) %>
				<% end %>  	
			</div>
		<% end %>
	</div>
</div>