<% provide(:title, 'New training method') %>
<h1>New training method</h1>

<div class="row">
	<aside class="span3">
		<section>
			<%= render "/shared/admin_menu_side" %>
		</section>
	</aside>
	<div class="span8">
		<%= form_for(@method) do |f| %>

		 	<%= render 'fields', f: f %>

			<%= f.submit "Create", class: "btn btn-primary add-top-space" %>
			<div class="navigator">
				<%= link_to "<- All methods", training_methods_path %>
			</div>
		<% end %>
	</div>
</div> 

